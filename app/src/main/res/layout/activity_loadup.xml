<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DCDCDC"
    tools:context=".LoadupActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="388sp"
        android:layout_height="291sp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@mipmap/main" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:fontFamily="@font/recoleta"
        android:text="Supplying you everyday!"
        android:textColor="#945C5E"
        android:textSize="43sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:lineHeight="25.89dp"
        android:maxEms="14"
        android:text="We offer 24/7 delivery service. Please keep in mind items that are stored on our app is not from us. Every user can store their items and sell them so please be sure to avoid risky actions with sellers cause we are not responsible for that!"
        android:textColor="#000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="35dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/regBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25sp"
            android:layout_marginRight="5sp"
            android:layout_weight="1"
            android:height="55sp"
            android:background="@drawable/roundedbuttonbrown"
            android:fontFamily="@font/recoleta"
            android:text="Register"
            android:textAllCaps="false"
            android:textColor="#DCDCDC"
            android:textSize="18sp"
            app:cornerRadius="100sp" />

        <Button
            android:id="@+id/logBut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="25sp"
            android:layout_weight="1"
            android:height="55sp"
            android:background="@drawable/roundedbuttonwhite"
            android:fontFamily="@font/recoleta"
            android:text="Log in"
            android:textAllCaps="false"
            android:textColor="#000000"
            android:textSize="18sp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>